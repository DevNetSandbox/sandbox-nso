<config-template xmlns="http://tail-f.com/ns/config/1.0">


    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{$DEVICE_NAME}</name>
            <config>

            <!-- IOS VLANs  -->
            <vlan xmlns="urn:ios">
                <vlan-list>
                <id>{$VLAN_ID}</id>
                <name>{$VLAN_NAME}</name>
                </vlan-list>
            </vlan>

            <!-- NX-OS VLANs  -->
            <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                <vlan-list>
                <id>{$VLAN_ID}</id>
                <name>{$VLAN_NAME}</name>
                </vlan-list>
            </vlan>
            </config>
        </device>

    </devices>

</config-template>
